@model IEnumerable<WebBanVeMayBay.Models.Category>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAd.cshtml";
    <link href="~/Scripts/style-form.css" rel="stylesheet" />
}
<div style="background-color: wheat; border-radius: 30px; opacity: 80% ">
    <div class="card-header">
        <div class="row">
            <div class="col-md-9">
                <strong class="text-uppercase text-center" style="text-align:center; padding-left:650px;">Danh sách loại chuyến bay</strong>
            </div>
            <div class="col-md-3 text-end">
                <a href="@Url.Action("Create", "Category")" class="btn btn-sm" style="background-color: #fd7128; color: white">Thêm</a>
                <a href="@Url.Action("Trash", "Category")" class="btn btn-sm" style="background-color: #fd7128; color: white">Thùng rác</a>
            </div>
        </div>
    </div>
    <div class="card-body p-3">
        <table class="table table-bordered table-hover">
            <thread>
                <tr>
                    <th>Tên loại chuyến bay</th>
                    <th class="text-center">Chức năng</th>
                    <th class="text-center">ID</th>

                </tr>

            </thread>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <th>@item.Name</th>
                        <th class="text-center">
                            @if (item.Status == 1)
                            {
                                <a href="@Url.Action("Status", "Category", new { @id = item.Id })" class="btn btn-sm btn-success ">
                                    On
                                </a>
                            }
                            else
                            {
                                <a href="@Url.Action("Status", "Category", new { @id = item.Id })" class="btn btn-sm btn-danger ">
                                    Off
                                </a>
                            }
                            <a href="@Url.Action("Edit", "Category", new { @id = item.Id })" class="btn btn-sm btn-info ">
                                Chỉnh sửa
                            </a>
                            <a href="@Url.Action("Details", "Category", new { @id = item.Id })" class="btn btn-sm btn-warning ">
                                Chi tiết
                            </a>
                            <a href="@Url.Action("DelTrash", "Category", new { @id = item.Id })" class="btn btn-sm btn-danger ">
                                Xóa
                            </a>

                        </th>
                        <th class="text-center">@item.Id</th>

                    </tr>
                }
            </tbody>

        </table>
    </div>
</div>

