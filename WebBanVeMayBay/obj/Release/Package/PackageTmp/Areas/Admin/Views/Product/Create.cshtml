@model WebBanVeMayBay.Models.Product

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAd.cshtml";
    <link href="~/Scripts/style-form.css" rel="stylesheet" />
}
<div class="container-fluid px-1 py-5 mx-auto">
    <div class="row d-flex justify-content-center">
        <div class="col-xl-7 col-lg-8 col-md-9 col-11 text-center">
            <div class="">
                <h3 class="text-center mb-4">Thêm chuyến bay</h3>
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <form class="cf">
                        <div class="half left cf">
                            <input type="text" name="Name" placeholder="Tên chuyến bay">
                        </div>
                        <div class="half right cf">
                            <input type="text" name="Detail" placeholder="Ghi chú">
                        </div>
                        <div class="half left cf">
                            <input type="text" name="PlanFrom" placeholder="Sân bay đi">
                        </div>
                        <div class="half right cf">
                            <input type="text" name="PlanTo" placeholder="Sân bay đến">
                        </div>
                        <div class="half left cf">
                            <label>Ngày bay</label>
                            <input id="date" type="date" name="date" />
                        </div>
                        <div class="half left cf">
                            <label>Giờ bay</label>
                            <input id="datetime" type="datetime-local" name="datetime" />

                        </div>
                        <div class="half right cf">
                            <input type="text" name="MidAir" placeholder="Sân bay trung gian">
                        </div>
                        <div class="half left cf">
                            <input type="text" name="BreakTime" placeholder="Thời gian dừng (Phút)">
                        </div>
                        <div class="half right cf">
                            <input type="text" name="OnAir" placeholder="Thời gian bay (Phút)">
                        </div>
                        <div class="half left cf">
                            @Html.DropDownListFor(model => model.CatId, (SelectList)ViewBag.ListCat, "--Loại chuyến bay--", new { @class = "form-control" })
                        </div>
                        <div class="half right cf">
                            <input type="text" name="Number" placeholder="Số lượng vé">
                        </div>
                        <div class="half left cf">
                            <input type="text" name="Price" placeholder="Giá vé">
                        </div>
                        <div class="half right cf">
                            <input type="text" name="Pricesale" placeholder="Giá khuyến mãi">
                        </div>
                        <div class="half left cf">
                            @Html.DropDownListFor(model => model.Status, new[] {
                       new SelectListItem { Text="Private", Value="2"},
                       new SelectListItem {Text="Public", Value="1"}}, new { @class = "form-control" })
                        </div>
                        <div class="half right cf">
                            <input type="text" name="Seat1" placeholder="SL ghế hạng 1">
                        </div>
                        <div class="half left cf">
                            <input type="text" name="Seat2" placeholder="SL ghế hạng 2">
                        </div>
                        <div class="half left cf">
                            <input type="submit" value="Thêm" id="input-submit" style="background-color: #fd7128; color: white">
                        </div>

                    </form>
                }
            </div>
        </div>
    </div>
</div>

