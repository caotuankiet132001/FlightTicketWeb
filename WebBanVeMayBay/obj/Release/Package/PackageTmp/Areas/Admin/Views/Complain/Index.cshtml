@model IEnumerable<WebBanVeMayBay.Models.Complain>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAd.cshtml";

}

<div style="background-color: wheat; border-radius: 30px; opacity: 80% ">
    @using (Html.BeginForm("Filter", "Complain", FormMethod.Get))
    {
        <div class="">
            <div class="">
                <div class="row">
                    <div class="col-md-9">
                        <strong class="text-uppercase text-center" style="text-align:center; padding-left:650px;">Danh sách phản hồi</strong>
                    </div>
                    <div class="col-md-3 text-end">
                        <select name="Filter">
                            <option selected>Bộ lọc</option>
                            <option value="Đã giải quyết">Đã giải quyết</option>
                            <option value="Chưa giải quyết">Chưa giải quyết</option>
                        </select>
                        <button class="btn btn-sm" style="background-color: #fd7128; color: white">Lọc</button>
                    </div>
                </div>
            </div>
            <div class=" p-3">
                <table class="table table-borderless table-hover">
                    <thread>
                        <tr>
                            @*<th style="width:20px;" class="text-center">#</th>*@
                            <th>Mã phiếu phản hồi</th>
                            <th>Loại phản hồi</th>
                            <th>Chi tiết</th>
                            <th>Họ tên KH</th>
                            <th>CCCD KH</th>
                            <th>Số điện thoại KH</th>
                            <th>Ngày gửi</th>
                            <th class="text-center">Chức năng</th>
                        </tr>
                    </thread>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <th>@item.Id</th>
                                <th>@item.Type</th>
                                <th>@item.Detail</th>
                                <th>@item.ClientName </th>
                                <th>@item.ClientId</th>
                                <th>@item.PhoneNumber</th>
                                <th>@item.CreateSend</th>
                                <th class="text-center">
                                    @if (item.status == 0)
                                    {
                                        <a href="@Url.Action("Status", "Complain", new { @id = item.Id })" class="btn btn-sm btn-danger ">
                                            Chưa giải quyết
                                        </a>
                                    }
                                    else
                                    {
                                        <a href="@Url.Action("Status", "Complain", new { @id = item.Id })" class="btn btn-sm btn-success ">
                                            Đã giải quyết
                                        </a>
                                    }
                                    <a href="@Url.Action("Delete", "Complain", new { @id = item.Id })" class="btn btn-sm btn-danger ">
                                        Xóa
                                    </a>
                                </th>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
</div>
