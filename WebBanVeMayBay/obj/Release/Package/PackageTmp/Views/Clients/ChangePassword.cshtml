@model WebBanVeMayBay.Models.Client
@{
    ViewBag.Title = "Info";
    Layout = "~/Views/Shared/_LayoutSite.cshtml";
    <link href="~/Scripts/style-form.css" rel="stylesheet" />
}

<div class="container-fluid px-1 py-5 mx-auto">
    <div class="row d-flex justify-content-center">
        <div class="col-xl-7 col-lg-8 col-md-9 col-11 text-center">
            <div class="">
                <h3 class="text-center mb-4">Đổi mật khẩu</h3>
                @using (Html.BeginForm("ChangePassword", "Clients"))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.Id)
                    @Html.HiddenFor(model => model.Point)
                    @Html.HiddenFor(model => model.ClientAccount)
                    @Html.HiddenFor(model => model.ClientSex)
                    @Html.HiddenFor(model => model.ClientName)
                    @Html.HiddenFor(model => model.ClientId)
                    @Html.HiddenFor(model => model.PhoneNumber)
                    @Html.HiddenFor(model => model.ClientEmail)
                    @Html.HiddenFor(model => model.ClientAddress)
                    <form class="form-card" onsubmit="event.preventDefault()">

                        <div class="row justify-content-between text-left">
                            <div class="form-group col-sm-12 flex-column d-flex">
                                <label>Mật khẩu cũ: </label>
                                <input type="password" name="ClientPassword" value="Mật khẩu cũ" />
                            </div>
                            <div class="form-group col-sm-12 flex-column d-flex">
                                <label>Mật khẩu mới: </label>
                                <input type="password" name="NewPassword" value="Mật khẩu mới" />
                            </div>
                            <div class="form-group col-sm-12 flex-column d-flex">
                                <label>Mật khẩu mới: </label>
                                <input type="password" name="NewPassword" value="Xác nhận mật khẩu mới" />
                            </div>
                            <div class="form-group col-sm-12 flex-column d-flex">
                                <input type="submit" value="Đổi mật khẩu" id="input-submit" style="background-color: #fd7128; color: white;padding: 1em; display: block; width: 100%; margin-top: 1em; margin-top: 50px" onclick="alert('Cập nhật thành công')">
                            </div>
                        </div>

                    </form>
                }
            </div>

        </div>
    </div>
</div>


