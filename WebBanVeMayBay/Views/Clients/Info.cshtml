
@model WebBanVeMayBay.Models.Client
@{
    ViewBag.Title = "Info";
    Layout = "~/Views/Shared/_LayoutSite.cshtml";
    <link href="~/Scripts/style-form.css" rel="stylesheet" />
}

    <div class="container-fluid px-1 py-5 mx-auto">
        <div class="row d-flex justify-content-center">
            <div class="col-xl-7 col-lg-8 col-md-9 col-11 text-center">
                <div class="">
                    <h3 class="text-center mb-4">Thông tin của bạn</h3>
                    @using (Html.BeginForm("Update", "Clients"))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.Id)
                        @Html.HiddenFor(model => model.Point)
                        @Html.HiddenFor(model => model.ClientAccount)
                        @Html.HiddenFor(model => model.ClientPassword)
                        @Html.HiddenFor(model => model.ClientSex)
                        <h6 class="text-center mb-4">Điểm tích lũy: @Html.DisplayFor(model => model.Point, "", new { @class = "text-danger" })</h6>
                        <form class="form-card" onsubmit="event.preventDefault()">
                            <div class="row justify-content-between text-left">
                                <div class="form-group col-sm-6 flex-column d-flex">
                                    <label>Tên của bạn: </label>
                                    @Html.TextBoxFor(model => model.ClientName)
                                    @*@Html.DisplayFor(model => model.Name, "", new { @class = "text-danger" })*@
                                    @Html.ValidationMessageFor(model => model.ClientName, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group col-sm-6 flex-column d-flex">
                                    <label>CMND của bạn: </label>
                                    @Html.TextBoxFor(model => model.ClientId)
                                    @*@Html.DisplayFor(model => model.Date, "", new { @class = "text-danger" })*@
                                    @Html.ValidationMessageFor(model => model.ClientId, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group col-sm-6 flex-column d-flex">
                                    <label>Số điện thoại của bạn: </label>
                                    @Html.TextBoxFor(model => model.PhoneNumber)
                                    @*@Html.DisplayFor(model => model.Time, "", new { @class = "text-danger" })*@
                                    @Html.ValidationMessageFor(model => model.PhoneNumber, "", new { @class = "texxt-danger" })
                                </div>
                                <div class="form-group col-sm-6 flex-column d-flex">
                                    <label>Email của bạn: </label>
                                    @Html.TextBoxFor(model => model.ClientEmail)
                                    @*@Html.DisplayFor(model => model.Time, "", new { @class = "text-danger" })*@
                                    @Html.ValidationMessageFor(model => model.ClientEmail, "", new { @class = "texxt-danger" })
                                </div>
                                <div class="form-group col-sm-6 flex-column d-flex">
                                    <label>Địa chỉ của bạn: </label>
                                    @Html.TextBoxFor(model => model.ClientAddress)
                                    @*@Html.DisplayFor(model => model.Time, "", new { @class = "text-danger" })*@
                                    @Html.ValidationMessageFor(model => model.ClientAddress, "", new { @class = "text-danger" })
                                </div>

                                <div class="form-group col-sm-6 flex-column d-flex">
                                    @*<a href="@Url.Action("Update", "Clients")" class="btn btn-sm btn-info" style="padding: 1em; display: block; width: 100%; margin-top: 1em; margin-top: 50px; border-radius: 15px; padding-top: 15px; padding-bottom: 15px; background-color: #fd7128; color: white; border-color: #fd7128 ">
                            Cập nhật
                        </a>*@
                                    <input type="submit" value="Cập nhật" id="input-submit" style="background-color: #fd7128; color: white;padding: 1em; display: block; width: 100%; margin-top: 1em; margin-top: 50px" onclick="alert('Cập nhật thành công')">


                                </div>
                            </div>

                        </form>
                    }
                </div>
                    
            </div>
        </div>
    </div>

